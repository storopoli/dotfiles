[user]
	name = Jose Storopoli
	email = jose@storopoli.io
	signingKey = 0x01BE853A206518CC!
[init]
	defaultBranch = main
[tag]
	gpgsign = true
	forceSignAnnotated = true
[format]
	signOff=yes
[ui "color"]
	ui = always
[color]
	ui = true
[core]
	autocrlf = input
	safecrlf = true
	editor = vim
[alias]
	acp = "!f() { git add . && git commit -m \"$@\" && git push origin HEAD; }; f"
	a = add
	br = branch
	bl = branch -l
	c = commit
	co = checkout
	d = diff
	g = grep
	m = merge
	p = pull
	pu = push
	rv = revert
	s = status
	st = status
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	last = log -1 HEAD
	f = push --force-with-lease
	w = whatchanged
	# https://stackoverflow.com/a/11688523/472927
	ss = "!f() { git stash show stash^{/$*} -p; }; f"
	sa = "!f() { git stash apply stash^{/$*}; }; f"
	sl = stash list
	tag = tag -s
	# https://docs.gitignore.io/install/command-line
	ig = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
[pull]
	ff = only
[push]
	default = current
	autoSetupRemote = true
	followtags = true
	useForceIfIncludes = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[help]
	autocorrect = 1
[status]
	submoduleSummary = true
[submodule]
	recurse = true
[github]
	user = storopoli
[diff]
	algorithm = histogram
	compactionHeuristic = true
	submodule = log
[protocol]
	version = 2
[commit]
	gpgsign = true
[branch]
	sort = -committerdate
[credential]
	helper = cache
[log]
	date = iso
[rebase]
	autosquash = true
	autostash = true
	updateRefs = true
[rerere]
	enabled = true
	autoUpdate = true

